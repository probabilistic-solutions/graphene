{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "DOM",
            "ES2017"
        ],
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationMap": false,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ]
}
